/* pages/me/index.wxss */
.header {
  background-color: white;
  flex-direction: row;
  display: flex;
  padding: 6vw 2vw;
}
#avatar-wrapper {
  width:15vw;
  height:15vw;
  padding: 0%;
  margin: 1vw;
  margin-left: 5vw;
  margin-right: 3vw;
}
.userinfo {
  margin: auto 0;
  width: 40vw;
}

.useravatar {
  width: 100%;
  height: 100%;
}
.username {
  font-size: 1.4rem;
}

.flag {
  text-align: center;
  font-size: small;
  padding: 0 2%;
  margin: auto 0;
  margin-left: 2vw;
  border-radius: 25px;
}

.updateinfo {
  margin: auto 0;
}

.logoutcell {
  text-align: center;
  color: crimson;
}